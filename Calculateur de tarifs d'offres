    <script>
        // Donn√©es compl√®tes avec lower/upper bounds pour validation et valid√©e
        const descriptions = {
            1: {
                personnelle: "Aucune marque personnelle en ligne, aucune pr√©sence, aucune preuve de r√©sultats clients",
                entreprise: "M√©thode peu claire pour pr√©senter ton entreprise et tes m√©thodes en ligne",
                resultats: "Quelques r√©sultats clients prouv√©s, aucune interview vid√©o client enregistr√©e"
            },
            2: {
                personnelle: "Marque personnelle √©tablie - Les gens savent pourquoi ils devraient t'√©couter en ligne",
                entreprise: "M√©thode peu claire pour pr√©senter ton entreprise et tes m√©thodes en ligne",
                resultats: "R√©sultats clients prouv√©s r√©p√©t√©s, 3+ interviews vid√©o clients enregistr√©es (ou 10 t√©moignages √©crits)"
            },
            3: {
                personnelle: "Marque personnelle prouv√©e et efficace - 1-2 demandes entrantes par semaine",
                entreprise: "Marque d'entreprise √©tablie en ligne",
                resultats: "R√©sultats clients prouv√©s r√©p√©t√©s, 10+ interviews vid√©o clients enregistr√©es"
            },
            4: {
                personnelle: "Gravitas personnel tr√®s efficace (Autorit√©), top 10 dans ton industrie",
                entreprise: "M√©thode-Gravitas bien reconnue et prouv√©e (efficacit√©)",
                resultats: "Abondance d'√©tudes de cas de haute qualit√© et t√©moignages"
            },
            5: {
                personnelle: "Top 1-3 dans ton industrie - Files d'attente pour travailler avec toi",
                entreprise: "La m√©thode de r√©f√©rence dans l'industrie",
                resultats: "R√©sultats extraordinaires et constants - Les clients deviennent des ambassadeurs"
            }
        };

        // Prix avec structure compl√®te lower/upper pour validation et valid√©e
        const prixBase = {
            1: {
                validation: { lower: 0, upper: 0 },
                valide: { lower: 0, upper: 0 },
                special4x: { lower: 1000, upper: 1400, valide_lower: 2000, valide_upper: 2000 }
            },
            2: {
                validation: { lower: 0, upper: 0 },
                valide: { lower: 2000, upper: 2000 }
            },
            3: {
                validation: { lower: 1000, upper: 1400 },
                valide: { lower: 2000, upper: 4000 }
            },
            4: {
                validation: { lower: 2000, upper: 2100 },
                valide: { lower: 4000, upper: 6000 }
            },
            5: {
                validation: { lower: 4000, upper: 5600 },
                valide: { lower: 8000, upper: 8000 }
            }
        };

        const multiplicateurs = {
            'aucune': 0.8,
            '1x_mois': 0.9,
            '2x_mois': 1,
            '4x_mois': 1.2,
            'hebdo': 1.4
        };

        let scoreActuel = 1;
        let frequenceActuelle = '2x_mois';

        function setScore(score) {
            scoreActuel = score;
            
            // Mettre √† jour les boutons
            document.querySelectorAll('.btn[data-score]').forEach(btn => {
                if (btn.dataset.score == score) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // Mettre √† jour l'affichage
            document.getElementById('current-score').textContent = score + '/5';
            document.getElementById('desc-personnelle').textContent = descriptions[score].personnelle;
            document.getElementById('desc-entreprise').textContent = descriptions[score].entreprise;
            document.getElementById('desc-resultats').textContent = descriptions[score].resultats;
            
            calculerPrix();
        }

        function setFrequence(freq) {
            frequenceActuelle = freq;
            
            // Mettre √† jour les boutons
            document.querySelectorAll('.btn[data-freq]').forEach(btn => {
                if (btn.dataset.freq == freq) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            calculerPrix();
        }

        function calculerPrix() {
            const score = prixBase[scoreActuel];
            const multiplicateur = multiplicateurs[frequenceActuelle];
            
            let prixValidation, prixValide;
            
            // Gestion sp√©ciale pour score 1 avec 4x/mois
            if (scoreActuel === 1 && frequenceActuelle === '4x_mois' && score.special4x) {
                prixValidation = {
                    min: Math.round(score.special4x.lower * multiplicateur),
                    max: Math.round(score.special4x.upper * multiplicateur)
                };
                prixValide = {
                    min: Math.round(score.special4x.valide_lower * multiplicateur),
                    max: Math.round(score.special4x.valide_upper * multiplicateur)
                };
                
                document.getElementById('prix-container').classList.remove('hidden');
                document.getElementById('alerte-score-1').classList.add('hidden');
            } else if (scoreActuel === 1) {
                // Autres fr√©quences pour score 1
                document.getElementById('prix-container').classList.add('hidden');
                document.getElementById('alerte-score-1').classList.remove('hidden');
                return;
            } else {
                // Scores 2-5
                prixValidation = {
                    min: score.validation.lower > 0 ? 
                         Math.round(score.validation.lower * multiplicateur) :
                         Math.round(score.valide.lower * 0.5 * multiplicateur),
                    max: score.validation.upper > 0 ? 
                         Math.round(score.validation.upper * multiplicateur) :
                         Math.round(score.valide.upper * 0.7 * multiplicateur)
                };
                
                prixValide = {
                    min: Math.round(score.valide.lower * multiplicateur),
                    max: Math.round(score.valide.upper * multiplicateur)
                };
                
                document.getElementById('prix-container').classList.remove('hidden');
                document.getElementById('alerte-score-1').classList.add('hidden');
            }
            
            // Afficher les prix
            if (prixValidation.min === prixValidation.max) {
                document.getElementById('prix-validation').textContent = 
                    prixValidation.min.toLocaleString('fr-FR');
            } else {
                document.getElementById('prix-validation').textContent = 
                    prixValidation.min.toLocaleString('fr-FR') + ' - ' + 
                    prixValidation.max.toLocaleString('fr-FR');
            }
            
            if (prixValide.min === prixValide.max) {
                document.getElementById('prix-valide').textContent = 
                    prixValide.min.toLocaleString('fr-FR');
            } else {
                document.getElementById('prix-valide').textContent = 
                    prixValide.min.toLocaleString('fr-FR') + ' - ' + 
                    prixValide.max.toLocaleString('fr-FR');
            }
        }

        // Initialiser
        calculerPrix();
    </script>
